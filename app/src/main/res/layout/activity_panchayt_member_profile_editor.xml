<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".panchayt_member_profile_editor">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    >
                    <androidx.appcompat.widget.Toolbar
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:title="My Profile"
                        app:titleTextAppearance="@style/collappsed_title_text_appearence"
                        android:id="@+id/toolbar_profile_editor"
                        app:titleTextColor="@color/color2"
                        ></androidx.appcompat.widget.Toolbar>
                </LinearLayout>
                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="top"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="150sp"
                                android:layout_height="150sp">
                                <com.makeramen.roundedimageview.RoundedImageView
                                    android:layout_width="150sp"
                                    android:layout_height="150sp"
                                    android:id="@+id/user_profile_pic"
                                    app:riv_corner_radius="200dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/dummyimg">
                                </com.makeramen.roundedimageview.RoundedImageView>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_margin="5sp"
                                    android:gravity="center"
                                    >
                                    <ImageButton
                                        android:layout_width="40sp"
                                        android:layout_height="40sp"
                                        android:background="@drawable/buttonbg"
                                        android:tint="@color/white"
                                        android:id="@+id/chooser"
                                        android:src="@drawable/ic_camera_alt_black_24dp"></ImageButton>
                                </LinearLayout>
                            </RelativeLayout>

                        </LinearLayout>



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="25dp"
                            android:id="@+id/editname"
                            android:weightSum="10"
                            >
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:layout_height="match_parent"
                                >
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_account_circle_black_24dp"
                                    android:tint="@color/color2"></ImageView>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="6.5"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Name"
                                    android:textSize="14sp"
                                    android:textAppearance="@style/collappsed_subtitle_text_appearence"
                                    android:textColor="@color/white"
                                    ></TextView>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Rajbalwinder Singh"
                                    android:textColor="@color/color2"
                                    android:id="@+id/membername"
                                    android:textAppearance="@style/collappsed_subtitle_text_appearence"
                                    android:textSize="16sp"
                                    ></TextView>


                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1.4"
                                android:layout_height="match_parent"
                                >
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_edit_black_24dp"
                                    android:tint="@color/grey"></ImageView>
                            </LinearLayout>



                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/blackover"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="10dp"></View>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="15dp"
                            android:weightSum="10"
                            android:id="@+id/editbio"
                            >
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:layout_height="match_parent"
                                >
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_error_outline_black_24dp"
                                    android:tint="@color/color2"></ImageView>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="6.5"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Bio"
                                    android:textSize="14sp"
                                    android:textColor="@color/white"
                                    ></TextView>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Education :"
                                        android:textColor="@color/color2"
                                        android:layout_marginTop="5dp"
                                        android:textAppearance="@style/collappsed_subtitle_text_appearence"
                                        android:textSize="14sp"
                                        ></TextView>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Government School, Garhshankar"
                                        android:textColor="@color/grey"
                                        android:id="@+id/education"
                                        android:textAppearance="@style/collappsed_subtitle_text_appearence"
                                        android:textSize="14sp"
                                        ></TextView>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Currently Doing :"
                                        android:textColor="@color/color2"
                                        android:layout_marginTop="5dp"
                                        android:textAppearance="@style/collappsed_subtitle_text_appearence"
                                        android:textSize="14sp"
                                        ></TextView>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Law At Hari College of Law."
                                        android:textColor="@color/grey"
                                        android:id="@+id/currently_doing"
                                        android:textAppearance="@style/collappsed_subtitle_text_appearence"
                                        android:textSize="14sp"
                                        ></TextView>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Hobbies :"
                                        android:textColor="@color/color2"
                                        android:layout_marginTop="5dp"
                                        android:textAppearance="@style/collappsed_subtitle_text_appearence"
                                        android:textSize="14sp"
                                        ></TextView>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Painting, Literature Writing and Social Service"
                                        android:textColor="@color/grey"
                                        android:id="@+id/hobbies"
                                        android:textAppearance="@style/collappsed_subtitle_text_appearence"
                                        android:textSize="14sp"
                                        ></TextView>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Business :"
                                        android:textColor="@color/color2"
                                        android:layout_marginTop="5dp"
                                        android:textAppearance="@style/collappsed_subtitle_text_appearence"
                                        android:textSize="14sp"
                                        ></TextView>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Network Marketing"
                                        android:textColor="@color/grey"
                                        android:id="@+id/business"
                                        android:textAppearance="@style/collappsed_subtitle_text_appearence"
                                        android:textSize="14sp"
                                        ></TextView>

                                    </LinearLayout>
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1.4"
                                android:layout_height="match_parent"
                                >
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_edit_black_24dp"
                                    android:tint="@color/grey"></ImageView>
                            </LinearLayout>




                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/blackover"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="10dp"></View>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="15dp"
                            android:weightSum="10"
                            android:id="@+id/editdob"
                            >
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:layout_height="match_parent"
                                >
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_cake_black_24dp"
                                    android:tint="@color/color2"></ImageView>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="6.5"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Date Of Birth"
                                    android:textSize="14sp"
                                    android:textColor="@color/white"
                                    ></TextView>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="05/08/2001"
                                    android:textAppearance="@style/collappsed_subtitle_text_appearence"
                                    android:textColor="@color/grey"
                                    android:id="@+id/memberdob"
                                    android:textSize="15sp"
                                    ></TextView>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1.4"
                                android:layout_height="match_parent"
                                android:gravity="top"
                                >
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_edit_black_24dp"
                                    android:tint="@color/grey"></ImageView>
                            </LinearLayout>


                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/blackover"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="10dp"></View>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="15dp"
                            android:id="@+id/editphn"
                            android:layout_marginBottom="50sp"
                            android:weightSum="10"
                            >
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:layout_height="match_parent"
                                >
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_call_black_24dp"
                                    android:tint="@color/color2"></ImageView>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="6.5"
                                android:layout_height="match_parent"
                                android:orientation="vertical"

                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Phone"
                                    android:textSize="14sp"
                                    android:textColor="@color/white"
                                    ></TextView>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="9464410043"
                                    android:textColor="@color/grey"
                                    android:id="@+id/memberphn"
                                    android:textAppearance="@style/collappsed_subtitle_text_appearence"
                                    android:textSize="14sp"
                                    ></TextView>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1.4"
                                android:layout_height="match_parent"
                                android:gravity="top"
                                >
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_edit_black_24dp"
                                    android:tint="@color/grey"></ImageView>
                            </LinearLayout>




                        </LinearLayout>

                    </LinearLayout>

                </androidx.core.widget.NestedScrollView>
            </LinearLayout>

            <include layout="@layout/progressbar"></include>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>
</LinearLayout>